<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemberMgmt"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:Custom="http://www.galasoft.ch/mvvmlight" x:Class="MemberMgmt.MainWindow"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen" Background="Transparent" 
        Title="MainWindow" d:DesignWidth="1379" d:DesignHeight="634.5" DataContext="{Binding Main, Mode=OneWay, Source={StaticResource Locator}}" AllowsTransparency="True" WindowStyle="None" >
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="KeyUp">
            <Custom:EventToCommand Command="{Binding CardInfo.ScanQRCodeCommand, Mode=OneWay}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <Style x:Key="closeButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <StackPanel>
                            <Border Background="#FFB43333" CornerRadius="3" BorderThickness="1" BorderBrush="#FF5D5A5A">
                                <Image Source="Sources/Images/icon_chacha.png"/>
                            </Border>
                            <ContentPresenter></ContentPresenter>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border CornerRadius="10" Background="White" BorderBrush="#FF9E9E9E">
        <DockPanel Margin="3,0,3,0">
            <Grid Height="30" DockPanel.Dock="Top" Background="#00000000">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding DropMoveCommand, Mode=OneWay}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <TextBlock Margin="10,6,0,0" HorizontalAlignment="Left" Width="74" Height="20" VerticalAlignment="Top">会员卡管理</TextBlock>
                <Button Style="{StaticResource closeButtonStyle}" IsCancel="True" Width="20" Height="20"  Command="{Binding CloseWindowCommand, Mode=OneWay}" HorizontalAlignment="Right" Margin="0,3,3,0" />
            </Grid>
            <Grid Height="10" DockPanel.Dock="Bottom"/>
            <Grid Background="#FFA1C8FF">
                <Grid.RowDefinitions>
                    <RowDefinition Height="459*"/>
                    <RowDefinition Height="101*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Margin="82,6,70,19" Grid.Row="1">
                    <Button Width="128" VerticalAlignment="Top" x:Name="textBlock_Copy15" Margin="0,0,76,0" Height="50" HorizontalAlignment="Right" Content="服务器通讯状态" Background="#FFF06AD7"      />
                    <TextBlock Width="128" VerticalAlignment="Top" Text="提示框提示当前会员卡是否消费成功" TextWrapping="Wrap" x:Name="textBlock_Copy14" Margin="0,2,334,0" Height="50" HorizontalAlignment="Right" Background="#FF6786C7"  />
                    <Button Width="128" VerticalAlignment="Top" x:Name="textBlock_Copy13" Margin="232,14,0,0" Height="22" HorizontalAlignment="Left" Command="{Binding OpenCardCommand, Mode=OneWay}" Content="开卡" Background="#FFF5CC40"  />
                    <TextBlock Width="128" VerticalAlignment="Top" Text="当前会员卡号" TextWrapping="Wrap" x:Name="textBlock_Copy12" Margin="0,15,0,0" Height="22" HorizontalAlignment="Left" Background="#FFE04CD9"     />
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="150,14,0,0" TextWrapping="Wrap" Text="{Binding CardInfo.CardNum}" VerticalAlignment="Top" Width="60" IsEnabled="False"/>

                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="959*"/>
                        <ColumnDefinition Width="286*"/>
                    </Grid.ColumnDefinitions>
                    <Grid  Margin="10" Background="#FF1C6A8F" Grid.Column="1">
                        <TextBlock Width="128" VerticalAlignment="Top" Text="会员姓名" TextWrapping="Wrap" x:Name="textBlock_Copy9" Height="22" HorizontalAlignment="Left" Background="#FFF06AD7" Margin="38,85,0,0"                      />
                        <TextBlock Width="128" VerticalAlignment="Top" Text="手机" TextWrapping="Wrap" x:Name="textBlock_Copy10" Margin="38,176,0,0" Height="22" HorizontalAlignment="Left" Background="#FFF06AD7"                      />
                        <Button Width="76" VerticalAlignment="Top" x:Name="textBlock_Copy11" Margin="79,293,0,0" Height="22" HorizontalAlignment="Left" Command="{Binding SearchInfo.SearchCommand, Mode=OneWay}" Content="搜索" Background="#FF6AF0A7"                      />
                        <TextBox Width="86" VerticalAlignment="Top" Text="{Binding SearchInfo.Name}" TextWrapping="Wrap" Margin="60,126,0,0" Height="23" HorizontalAlignment="Left"                      />
                        <TextBox Width="86" VerticalAlignment="Top" Text="{Binding SearchInfo.Mobile}" TextWrapping="Wrap" Margin="60,203,0,0" Height="23" HorizontalAlignment="Left"                      />
                    </Grid>
                    <Grid Margin="10" Background="#FFFB7B5F">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="242*"/>
                            <RowDefinition Height="197*"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="textBlock" Text="会员卡大图" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="82" Margin="42,36,0,0"/>
                        <TextBlock x:Name="textBlock_Copy1" Text="手机" HorizontalAlignment="Left" Margin="175,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="56" Background="#FFF981CE"/>
                        <TextBlock x:Name="textBlock_Copy2" Text="会员姓名" HorizontalAlignment="Left" Margin="184,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="56" Background="#FFF981CE"/>
                        <TextBlock x:Name="textBlock_Copy3" Text="身份证号" HorizontalAlignment="Left" Margin="590,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="64" Background="#FFF981CE"/>
                        <TextBlock x:Name="textBlock_Copy4" Text="性别" HorizontalAlignment="Left" Margin="590,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="64" Background="#FFF981CE"/>
                        <Grid Margin="21,27,19,36" Background="#FFEEE41F" Grid.Row="1">
                            <TextBox HorizontalAlignment="Left" Height="24" Margin="141,58,0,0" TextWrapping="Wrap" Text="{Binding CardInfo.State}" VerticalAlignment="Top" Width="60" IsEnabled="False"/>
                            <TextBox HorizontalAlignment="Left" Height="23" Margin="345,48,0,0" TextWrapping="Wrap" Text="{Binding CardInfo.CardType}" VerticalAlignment="Top" Width="60" IsEnabled="False"/>
                            <TextBox HorizontalAlignment="Left" Height="23" Margin="548,48,0,0" TextWrapping="Wrap" Text="{Binding CardInfo.StartDate}" VerticalAlignment="Top" Width="60" IsEnabled="False"/>
                            <TextBox HorizontalAlignment="Left" Height="23" Margin="765,47,0,0" TextWrapping="Wrap" Text="{Binding CardInfo.EndDate}" VerticalAlignment="Top" Width="60" IsEnabled="False"/>
                            <TextBlock x:Name="textBlock_Copy5" Text="卡状态" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Height="30" Width="55" Background="#FFF981CE" Margin="50,0,0,0"/>
                            <TextBlock x:Name="textBlock_Copy6" Text="会员卡类型" HorizontalAlignment="Left" Margin="255,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="68" Background="#FFF981CE"/>
                            <TextBlock x:Name="textBlock_Copy7" Text="卡开启时间" HorizontalAlignment="Left" Margin="438,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="74" Background="#FFF981CE"/>
                            <TextBlock x:Name="textBlock_Copy8" Text="卡到期时间" HorizontalAlignment="Left" Margin="642,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="87" Background="#FFF981CE"/>
                            <TextBox Width="60" VerticalAlignment="Top" Text="{Binding CardInfo.Gender}" TextWrapping="Wrap" Margin="669,-155,0,0" IsEnabled="False" Height="23" HorizontalAlignment="Left"   />
                            <TextBox Width="60" VerticalAlignment="Top" Text="{Binding CardInfo.IdCardNum}" TextWrapping="Wrap" Margin="669,-202,0,0" IsEnabled="False" Height="24" HorizontalAlignment="Left"     />
                            <TextBox Width="142" VerticalAlignment="Top" Text="{Binding CardInfo.Mobile}" TextWrapping="Wrap" Margin="278,-140,0,0" IsEnabled="False" Height="36" HorizontalAlignment="Left" />
                            <TextBox Width="142" VerticalAlignment="Top" Text="{Binding CardInfo.Name}" TextWrapping="Wrap" Margin="278,-230,0,0" IsEnabled="False" Height="39" HorizontalAlignment="Left" />

                        </Grid>
                    </Grid>
                </Grid>
            </Grid>

        </DockPanel>
    </Border>
</Window>
